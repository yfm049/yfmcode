<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pro.hsh"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.pro.app.HshApp_" >
        <activity
            android:name="com.pro.activity.WelcomeActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pro.activity.MainActivity_"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan|stateHidden">
         </activity>
         <activity
            android:name="com.pro.activity.CommunityActivity_"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan|stateHidden">
         </activity>
         <activity
            android:name="com.pro.activity.LoginActivity_"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan|stateHidden">
         </activity>
         <activity
            android:name="com.pro.activity.RegActivity_"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan|stateHidden">
         </activity>
         <activity
            android:name="com.pro.activity.ForgetActivity_"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan|stateHidden">
         </activity>
    </application>

</manifest>
